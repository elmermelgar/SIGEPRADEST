{% extends 'base2.html.twig' %}
{% block active2 %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
{% endblock %}
{% block Header %}
<div class="col-md-12">
    <ol class="breadcrumb">
        <li><a href="{{ path('secretaria') }}">Inicio</a></li>
        <li class="active">Cuotas</li>
    </ol>
    <h2>Cuotas del "{{ curso.nombreCurso }}"</h2> {% if curso.numCuotas>contar %}<h4>Cuotas Disponibles: {{ curso.numCuotas-contar }}</h4><a href="{{ path('cuotas_create', {'id': idcurso}) }}" style="float: right; margin-top: -35px;" title="Agregar" class="btn btn-primary" ><i class="fa fa-plus" aria-hidden="true"></i> Agregar Cuota</a>{% endif %}
</div>
{% endblock %}
{% block body %}
    <div class="col-md-12">
        <!--   Cuerpo -->
        {% for cuotas in cuotas %}
        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="panel panel-primary text-center no-boder bg-color-blue">
                <div class="panel-footer main-temp-back">
                    {{ cuotas.cuota }}<a href="{{ path('cuotas_edit', {'id': cuotas.idCuota, 'id2': idcurso}) }}" title="Editar" class="btn btn-success" style="background: #8702A8; float: right;margin-top: -6px;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"/></a>
                </div>
                <div class="panel-body">
                    <i class="fa fa-money fa-2x"></i>
                    <h3>$ {{ cuotas.monto }}</h3>
                </div>
                <div class="panel-footer main-temp-back" style="font-size: 12px;">
                    {{ cuotas.descripCuota}}
                </div>
            </div>
        </div>
        {% endfor %}
        <!-- fin del cuerpo -->
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
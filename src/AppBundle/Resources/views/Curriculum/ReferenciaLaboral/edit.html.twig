{% extends 'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('public/assets/css/select2.min.css') }}">
    <link href="{{ asset('public/css/bootstrap-datepicker.min.css') }}" rel="stylesheet"/>

{% endblock %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('curriculumTo', { 'id': curriculum }) }}">Inicio</a></li>
            <li><a href="{{ path('secretaria_referencialaboral', { 'cur': curriculum }) }}">Referencia laboral</a>
            </li>
            <li class="active">Actualizar</li>
        </ol>
        <h2>Actualizar Referencia laboral</h2>
    </div>

{% endblock %}
{% block body %}
    <div class="col-md-12">
        <!--   Kitchen Sink -->
        <div class="panel panel-default">
            <div class="panel-heading" style="padding-bottom: 15px;">
                Actualizar Referencia laboral
            </div>


            {% for flashMessage in app.session.flashbag.get('error') %}
                <script>
                    window.onload = function error(){
                        alertify.error("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.success("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}

            <br/>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                <br/>
                {{ form_start(edit_form) }}

                {{form_widget(edit_form.idCurriculum, {'value': curriculum, "attr":{"style":"display:none;"}}) }}


                <div class="col-md-6">

                    <div class="form-group">
                        <label>Persona de referencia</label>
                        {{ form_widget(edit_form.personaRf,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>

                    <div class="form-group">
                        <label>Teléfono</label>
                        {{ form_widget(edit_form.telefonoRf,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        {{ form_widget(edit_form.descripcionRf,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>

                </div>


                <div class="col-md-6">

                    <div class="form-group">
                        <label>Empresa</label>
                        {{ form_widget(edit_form.empresaOrigenRf,{"attr":{"class":"form-control"},"required":"required"}) }}

                    </div>
                    <div class="form-group">
                        <label>Puesto de la persona de referencia</label>
                        {{ form_widget(edit_form.puestoRf,{"attr":{"class":"form-control"},"required":"required"}) }}

                    </div>


                </div>


                <div class="col-md-12 text-center">
                    <br/>
                    {{ form_widget(edit_form.submit) }}<br/><br/>
                </div>
                <br/><br/>
                {{ form_end(edit_form) }}

            </table>
        </div>


    </div><!--/row-->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('public/js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}

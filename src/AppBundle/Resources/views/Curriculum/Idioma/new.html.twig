{% extends 'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('public/assets/css/select2.min.css') }}">
    <link href="{{ asset('public/css/bootstrap-datepicker.min.css') }}" rel="stylesheet"/>

{% endblock %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('curriculumTo', { 'id': curriculum }) }}">Inicio</a></li>
            <li><a href="{{ path('idioma', { 'cur': curriculum }) }}">Idioma</a>
            </li>
            <li class="active">Crear</li>
        </ol>
        <h2>Nuevo idioma</h2>
    </div>

{% endblock %}
{% block body %}
    <div class="col-md-12">
        <!--   Kitchen Sink -->
        <div class="panel panel-default">
            <div class="panel-heading" style="padding-bottom: 15px;">
                Creaci贸n de un idioma
            </div>


            {% for flashMessage in app.session.flashbag.get('error') %}
                <script>
                    window.onload = function error(){
                        alertify.error("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.success("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}

            <br/>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                <br/>

               {{ form_start(form) }}

                {{form_widget(form.idCurriculum, {'value': curriculum, "attr":{"style":"display:none;"}}) }}


              <div class="col-md-6">

                  <div class="form-group">
                      <label>Idioma</label>
                      {{ form_widget(form.idioma,{"attr":{"class":"form-control"},"required":"required"}) }}
                  </div>

                  <div class="form-group">
                      <label>Comprensi贸n Auditiva</label>
                      {{ form_widget(form.comprensionAuditiva,{"attr":{"class":"form-control"},"required":"required"}) }}
                  </div>

                  <div class="form-group">
                      <label>Expresi贸n Oral</label>
                      {{ form_widget(form.expresionOral,{"attr":{"class":"form-control"},"required":"required"}) }}
                  </div>
                </div>


                <div class="col-md-6">

                    <div class="form-group">
                        <label>Expresi贸n Escrita </label>
                        {{ form_widget(form.expresionEscrita,{"attr":{"class":"form-control"},"required":"required"}) }}

                    </div>

                    <div class="form-group">
                        <label>Lengua Materna</label> <br/>
                        {{ form_widget(form.leguaMaterna) }}

                    </div>




                </div>


                <div class="col-md-12 text-center">
                    <br/>
                    {{ form_widget(form.submit) }}<br/><br/>
                </div>
                <br/><br/>
                {{ form_end(form) }}

            </table>
        </div>


    </div><!--/row-->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('public/js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}

                <div class="form-group" style=" /*display:none;">
                    <label>País</label>
                    {{form_widget(edit_form.fechaFinEl, {"attr":{"style":" width: 80%;",'class': 'form-control', 'data-provide':'datepicker', 'data-date-format' : 'dd-mm-yyyy','data-date-language' : 'es', 'required' : true  } }) }}
                </div>

                <div class="form-group" style=" /*display:none;">
                    <label>Información adicional </label>

                    {{ form_widget(edit_form.infoAdicionalEl,{"attr":{"class":"form-control"},"required":"required"}) }}
                </div>

                <br/>
                {{ form_end(edit_form) }}
            </div>

            <br/>

            {{ form(delete_form) }}

            {% endblock %}
            {% block javascripts %}
                <script src="{{ asset('public/js/bootstrap-datepicker.min.js') }}"></script>

            {% endblock %}



{% extends 'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('public/assets/css/select2.min.css') }}">
    <link href="{{ asset('public/css/bootstrap-datepicker.min.css') }}" rel="stylesheet"/>

{% endblock %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('curriculumAlumTo', { 'id': curriculum }) }}">Inicio</a></li>
            <li><a href="{{ path('alumno_experiencialaboral', { 'cur': curriculum }) }}">Experiencia laboral</a>
            </li>
            <li class="active">Crear</li>
        </ol>
        <h2>Nueva Experiencia laboral</h2>
    </div>

{% endblock %}
{% block body %}
    <div class="col-md-12">
        <!--   Kitchen Sink -->
        <div class="panel panel-default">
            <div class="panel-heading" style="padding-bottom: 15px;">
                Creación de una Experiencia laboral
            </div>


            {% for flashMessage in app.session.flashbag.get('error') %}
                <script>
                    window.onload = function error(){
                        alertify.error("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.success("{{ flashMessage }}.");
                        return false;
                    }
                </script>
            {% endfor %}

            <br/>
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                <br/>
                {#{{ form(form) }}#}
                {{ form_start(form) }}

                {{form_widget(form.idCurriculum, {'value': curriculum ~ "" , "attr":{"style":"display:none;"}}) }}



                <div class="col-md-6">

                    <div class="form-group">
                        <label>Institución de procedencia</label>
                        {{ form_widget(form.institucionEl,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>
                    <div class="form-group">
                        <label>Cargo</label>
                        {{ form_widget(form.cargoEl,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>
                    <div class="form-group">
                        <label>País de procedencia </label>
                        {{ form_widget(form.paisEl,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>

                </div>


                <div class="col-md-6">

                    <div class="form-group">
                        <label>Fecha inicio</label>
                        {{form_widget(form.fechaInicioEl, {"attr":{"style":" width: 100%;",'class': 'form-control', 'data-provide':'datepicker', 'data-date-format' : 'dd-mm-yyyy','data-date-language' : 'es', 'required' : true  } }) }}

                    </div>
                    <div class="form-group">
                        <label>Fecha Fin</label>
                        {{form_widget(form.fechaFinEl, {"attr":{"style":" width: 100%;",'class': 'form-control', 'data-provide':'datepicker', 'data-date-format' : 'dd-mm-yyyy','data-date-language' : 'es', 'required' : true  } }) }}

                    </div>
                    <div class="form-group">
                        <label>Información adicional </label>
                        {{ form_widget(form.infoAdicionalEl,{"attr":{"class":"form-control"},"required":"required"}) }}
                    </div>

                </div>


                <div class="col-md-12 text-center">
                    <br/>
                    {{ form_widget(form.submit) }}<br/><br/>
                </div>
                <br/><br/>
                {{ form_end(form) }}

        </div><!--/row-->
    </div><!--/row-->
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('public/js/bootstrap-datepicker.min.js') }}"></script>
{% endblock %}



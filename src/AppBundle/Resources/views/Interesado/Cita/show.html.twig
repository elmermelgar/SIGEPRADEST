{% extends'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
{% endblock %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}">Inicio</a></li>
            <li><a href="{{ path('cita') }}">Cita</a></li>
            <li class="active">Edicion de cita</li>
        </ol>
        <h2>Edicion de cita</h2>
    </div>
{% endblock %}
{% block body -%}
<div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">

                Formulario para el ingreso de una nueva cita
            </div>


            {% block javascripts %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                <script>
                    window.onload = function error(){
                        alertify.error("{{ flashMessage }}.");
                        return false;
                    }
                </script>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.success("{{ flashMessage }}.");
                        return false;
                    }
                </script>
                {% endfor %}
            {% endblock %}
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tbody>
                        <tr>
                            <th>Id cita</th>
                            <td>{{ entity.idCita }}</td>
                        </tr>
                        <tr>
                            <th>Detalle de horario</th>
                            <td>{{ entity.idDhe.fechaDhe|date("m/d/Y") }}</td>
                        </tr>
                        <tr>
                            <th>Comentario</th>
                            <td>{{ entity.comentarioCita }}</td>
                        </tr>
                        <tr>


                        </tr>
                        </tbody>
                    </table>
                    <div>
                        <div class="col-md-2">
                            <div class="form-group">
                                {{ form(delete_form) }}
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <a href="{{ path('cita_edit', { 'id': entity.idCita }) }}" class="btn btn-primary"
                                   style="width: 100%">
                                    Editar
                                </a>

                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <a href="{{ path('cita') }}" class="btn btn-info" style="width: 100%">
                                    Regresar
                                </a>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endblock %}

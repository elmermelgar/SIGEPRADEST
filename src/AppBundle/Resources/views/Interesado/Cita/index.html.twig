{% extends '::base2.html.twig' %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('index_interesado') }}">Inicio</a></li>
            <li class="active">Citas</li>
        </ol>
        <h2>Historial de Citas</h2>
    </div>
{% endblock %}
{% block body -%}


    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="padding-bottom: 15px;">
                Citas registradas
            </div>

            {% block javascripts %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                <script>
                    window.onload = function error(){
                        alertify.error("{{ flashMessage }}.");
                        return false;
                    }
                </script>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('exito') %}
                <script>
                    window.onload = function notificacion(){
                        alertify.success("{{ flashMessage }}.");
                        return false;
                    }
                </script>
                {% endfor %}
            {% endblock %}

            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Curso</th>
                    <th>Comentario cita</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.idCita }}</td>

                        <td>{{ entity.idDhe.fechaDhe|date("m/d/Y")|replace({
                                'Monday'  : 'Lunes',
                                'Tuesday'  : 'Martes',
                                'Thursday'  : 'Jueves',
                                'Wednesday'  : 'Miercoles',
                                'Friday'  : 'Viernes',
                                'Saturday'  : 'Sabado',
                                'Sunday'  : 'Domingo',
                            }) }}</td>
                        <td>{{ entity.idDhe.horaDhe|date("h:i A") }}</td>
                        <td>{{ entity.idCurso.NombreCurso }}</td>
                        <td>{{ entity.comentarioCita }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

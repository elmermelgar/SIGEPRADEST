{% extends 'base2.html.twig' %}
{% block active1 %}active-menu{% endblock %}
{% block Header %}
    <div class="col-md-12">

    <ol class="breadcrumb">
        <li><a href="{{ path('secretaria') }}">Inicio</a></li>
        <li><a href="{{ path('usuarios2') }}">Usuarios</a></li>
        <li class="active">Editar Usuario</li>
    </ol>
    <h2>Editando un usuario: {{ usuario.nomusuario }}</h2>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos Personales
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Editar Datos Complementarios</h3>

                            <form role="form" action="{{ path('editar_usuario2', {'id': usuario.idUi}) }}" method="post" enctype="multipart/form-data">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Fotografía </label>
                                        <input id="foto" type="file" name="foto" required/>
                                    </div>

                                    <div class="form-group">
                                        <label>Nombres </label>
                                        <input value="{{ usuario.nombre}}" class="form-control" name="nombre" pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+" title="Debe introducir un Nombre sin numeros" required/>
                                    </div>
                                    <div class="form-group">
                                        <label>Apellidos </label>
                                        <input value="{{ usuario.apellido}}" class="form-control" pattern="[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+" title="Debe introducir un Apellido sin numeros" name="apellido" required/>
                                    </div>
                                    <div class="form-group">
                                        <label>Fecha de Nacimiento </label>
                                        <input value="{{ usuario.fechaNacimientoUi.format("Y-m-d")}}" class="form-control" id="fechaNac" name="fechaNac" type="date" required/>
                                    </div>
                                    <div class="form-group">
                                        <label>Correo </label>
                                        <input value="{{ usuario.correo}}" class="form-control" type="email" name="email" required/>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="disabledSelect">DUI</label>
                                        <input value="{{ usuario.idEmpleado}}" class="form-control" name="id_emp" type="text" pattern="[0-9]{8}-[0-9]{1}" title="Debe introducir un DUI con formato 00000000-0" required placeholder="00000000-0"/>
                                    </div>
                                    <div class="form-group">
                                        <label for="form-control">Especialidad</label>
                                        <input value="{{ doc.especialidad}}" class="form-control" name="especialidad" max="50" type="text" />
                                    </div>
                                    <div class="form-group">
                                        <label>Turno </label>
                                        <select class="form-control" name="turno">
                                            <option value="Lunes-Viernes: Mañana">Lunes-Viernes: Mañana</option>
                                            <option value="Lunes-Viernes: Tarde">Lunes-Viernes: Tarde</option>
                                            <option value="Lunes-Viernes: Noche">Lunes-Viernes: Noche</option>
                                            <option value="Lunes-Sabado: Mañana">Lunes-Sábado: Mañana</option>
                                            <option value="Lunes-Sabado: Tarde">Lunes-Sábado: Tarde</option>
                                            <option value="Sábados: Mañana">Sábados: Mañana</option>
                                            <option value="Sábados: Tarde">Sábados: Tarde</option>
                                            <option value="Sábados: Tarde">Cualquier Horario</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="disabledSelect">Usuario</label>
                                        <input value="{{ usuario.nomusuario }}" class="form-control" name="username" readonly />
                                    </div>
                                    <div class="form-group">
                                        <label>Teléfono </label>
                                        <input value="{{ usuario.telefono }}" class="form-control" type="text" name="tel" max="9" placeholder="9999-9999"/>
                                    </div>

                                </div>
                                <div class="col-md-12">
                                    <button type="reset" style="width: 20%;margin-top: 10px;float: left" class="btn btn-default">Limpiar</button>
                                    <button type="submit" style="width: 20%;margin-top: 10px;float: right" class="btn btn-primary">Guardar Usuario</button>
                                </div>

                            </form>
                        </div>


                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>

{% endblock %}

{% extends 'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('director') }}">Inicio</a></li>
            <li class="active">Historial de Cursos</li>
        </ol>
        <h2>Historial de Cursos</h2>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        {% for cursos in cursos %}
            <div class="col-md-4 col-sm-4">
                <div {% if cursos.estadoCurso=='disponible' %}class="panel panel-success"{% elseif cursos.estadoCurso=='registro' %}class="panel panel-warning"{% elseif cursos.estadoCurso=='finalizado' %}class="panel panel-danger"{% endif %}>
                    <div class="panel-heading">
                        Actualmente: {{ cursos.estadoCurso }}
                    </div>
                    <div class="panel-body" style="text-align: center">
                        <div class="col-md-6">
                            <a href="" onclick="window.open('{{ asset('public') }}/{{ cursos.broshureInformativo}}');">
                                <img src="{{ asset('public') }}/{{ cursos.broshureInformativo }}" alt="img1" style="width: 100%;"></a>
                        </div>
                        <div class="col-md-6">
                            <h4>{{ cursos.nombreCurso }}</h4>
                            <br/>
                           Alumnos: {{ cursos.cantAlumnosLimit }}
                            <br/><br/><br/>
                            <a href="{{ path('detallesCurso', {'id': cursos.idCurso}) }}"  title="Detalles de curso" class="btn btn-primary" ><span class="fa fa-graduation-cap" aria-hidden="true"/> Ver Detalles</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
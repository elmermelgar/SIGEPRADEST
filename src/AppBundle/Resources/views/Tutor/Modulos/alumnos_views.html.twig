{% extends 'base2.html.twig' %}
{% block active1 %}active-menu{% endblock %}
{% block styles %}
    <link href="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet"/>
{% endblock %}
{% block Header %}
<div class="col-md-12">
    <ol class="breadcrumb">
        <li><a href="{{ path('tutor') }}">Inicio</a></li>
        <li><a href="{{ path('cursos_asignados') }}">Cursos Asignados</a></li>
        <li><a href="{{ path('modulos_curso', {'id': curso.idCurso}) }}">Modulos</a></li>
        <li class="active">Alumnos</li>
    </ol>
    <h2>Alumnos Inscritos en el Curso</h2>
</div>
{% endblock %}
{% block body %}
    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Alumnos del Curso
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                        <tr>
                            <th style="text-align: center">Nombre</th>
                            <th style="text-align: center">Email</th>
                            <th style="text-align: center">DUI</th>
                            <th style="text-align: center">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for alumnos in alumnos %}
                                <tr>
                                    <td>{{ alumnos.idAlumno.idUi.nombre }} {{ alumnos.idAlumno.idUi.apellido }}</td>
                                    <td>{{ alumnos.idAlumno.idUi.correo }}</td>
                                    <td>{{ alumnos.idAlumno.idDp.duiAlumno }}</td>
                                    <td style="text-align: center;">
                                        <a href="{{ path('notas_alumno', {'id1': modulo.idModulo, 'id2': alumnos.idDc}) }}" title="Editar" class="btn btn-default" style="background: #0AA5E2;color: #ffffff;"><span class="glyphicon glyphicon-book" aria-hidden="true"/> Subir Notas</a>
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- End  Kitchen Sink -->
    </div>
{% endblock %}
{% block javascripts %}

    
    <script src="{{ asset('public/assets/js/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('public/assets/js/dataTables/dataTables.bootstrap.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
{% endblock %}
{% extends 'base2.html.twig' %}
{% block active %}active-menu{% endblock %}
{% block Header %}
    <div class="col-md-12">

    <ol class="breadcrumb">
        <li><a href="{{ path('admin') }}">Inicio</a></li>
        <li><a href="{{ path('usuarios') }}">Usuarios</a></li>
        <li class="active">Nuevo Usuario</li>
    </ol>
    <h2>Creando un nuevo usuario a partir de un empleado</h2>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <!-- Form Elements -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos Personales
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Datos Complementarios</h3>

                            <form role="form" action="{{ path('nuevo_usuario') }}" method="post" >
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Nombres </label>
                                            <input class="form-control" name="nombre" required/>
                                    </div>
                                    <div class="form-group">
                                        <label>Apellidos </label>
                                            <input class="form-control" name="apellido" required/>
                                    </div>
                                    <div class="form-group">
                                        <label>Correo </label>
                                        <input class="form-control" type="email" name="email" required/>
                                    </div>

                                    <div class="form-group">
                                        <label>Telefono </label>
                                        <input class="form-control" type="text" name="tel" required max="9" placeholder="9999-9999"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="disabledSelect">Usuario</label>
                                            <input class="form-control" name="username" required/>
                                    </div>
                                    <div class="form-group">
                                        <label for="disabledSelect">Password</label>
                                            <input class="form-control" name="pass" type="password" required/>
                                    </div>
                                    <div class="form-group">
                                        <label for="disabledSelect">DUI</label>
                                            <input class="form-control" name="id_emp" type="text" max="10" placeholder="00000000-0"/>
                                    </div>
                                    <div class="form-group">
                                        <label>Tipo de Usuario</label>
                                        <select class="form-control" name="rol">
                                            <option value="1">Administrador</option>
                                            <option value="2">Tutor</option>
                                            <option value="5">Secretaria</option>
                                            <option value="2">Director</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="reset" style="width: 20%;margin-top: 10px;float: left" class="btn btn-default">Limpiar</button>
                                    <button type="submit" style="width: 20%;margin-top: 10px;float: right" class="btn btn-primary">Guardar Usuario</button>
                                </div>

                            </form>
                        </div>


                    </div>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>

{% endblock %}

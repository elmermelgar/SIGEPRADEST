{% extends '::base2.html.twig' %}
{% block Header %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}">Inicio</a></li>
            <li class="active">Detalles de Horario</li>
        </ol>
        <h2>Creacion  detalle de horario</h2>
    </div>
{% endblock %}
{% block body -%}
<div class="col-md-12">
    <!--   Kitchen Sink -->
    <div class="panel panel-default">
        <div class="panel-heading" style="padding-bottom: 15px;">
           Creacion de un nuevo detalle de horario
        </div>

        {% block javascripts %}
            {% for flashMessage in app.session.flashbag.get('error') %}
            <script>
                window.onload = function error(){
                    alertify.error("{{ flashMessage }}.");
                    return false;
                }
            </script>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('exito') %}
            <script>
                window.onload = function notificacion(){
                    alertify.success("{{ flashMessage }}.");
                    return false;
                }
            </script>
            {% endfor %}
        {% endblock %}

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">

  {{ form_start(form) }}

                            <div class="col-md-6">
                                <div class="form-group" style=" display:none;">
                                    <label> <label>Usuario Interesado </label> </label>
                                    {{ form_widget(form.idHe,{"attr":{"class":"form-control"},"required":"required"}) }}
                                </div>

                                <div class="form-group">
                                    <label> <label>Horario entrevistas </label> </label>
                                    {{ form_widget(form.horaDhe  ,{"attr":{"class":"form-control"},"required":"required"}) }}
                                </div>
                                <div class="form-group">
                                    <label> <label>Curso</label> </label>
                                    {{ form_widget(form.fechaDhe,{"attr":{"class":"form-control"},"required":"required"}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label> <label>Cometario de la cita</label> </label>
                                    {{ form_widget(form.ocupado,{"attr":{"class":"form-control"},"required":"required"}) }}
                                </div>
                            </div>
                            <div class="col-md-6">

                            </div>
          {{ form_end(form) }}
                   </table>
        <ul class="record_actions">
    <li>
        <a href="{{ path('detallehorario') }}">
            Back to the list
        </a>
    </li>
</ul>




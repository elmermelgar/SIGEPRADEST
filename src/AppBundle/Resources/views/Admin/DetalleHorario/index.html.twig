{% extends '::base.html.twig' %}

{% block body -%}
    <h1>DetalleHorario list</h1>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Iddhe</th>
                <th>Horadhe</th>
                <th>Fechadhe</th>
                <th>Ocupado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('detallehorario_show', { 'id': entity.idDhe }) }}">{{ entity.idDhe }}</a></td>
                <td>{{ entity.horaDhe|date('H:i:s') }}</td>
                <td>{% if entity.fechaDhe %}{{ entity.fechaDhe|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.ocupado  %}{{ 'Si' }}{% else %}{{ "No" }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('detallehorario_show', { 'id': entity.idDhe }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('detallehorario_edit', { 'id': entity.idDhe }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('detallehorario_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
